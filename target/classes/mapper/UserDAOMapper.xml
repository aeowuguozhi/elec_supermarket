<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bnuz.electronic_supermarket.user.dao.UserDao">
    <insert id="insertUser" parameterType="com.bnuz.electronic_supermarket.common.javaBean.User">
        insert into `user` (id,wechatId,account,password,headImage,nickName,phoneNumber,realName,idCard,address,state,createTime,updateTime,note,email)
        values (#{id},#{wechatId},#{account},#{password},#{headImage},#{nickName},#{phoneNumber},#{realName},#{idCard},#{address},#{state},#{createTime},#{updateTime},#{note},#{email})
    </insert>

    <select id="checkAccount"  resultType="com.bnuz.electronic_supermarket.common.javaBean.User">
        select * from `user` where account = #{account}
    </select>

    <select id="selectUsersByPhone" resultType="com.bnuz.electronic_supermarket.common.javaBean.User">
        select * from `user` where phoneNumber = #{phone}
    </select>

    <select id="selectUsersByAccountPassword" parameterType="string"
            resultType="com.bnuz.electronic_supermarket.common.javaBean.User">
        select * from `user` where account = #{account} AND password = #{password}
    </select>
</mapper>

